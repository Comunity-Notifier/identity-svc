datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  name         String
  passwordHash String?
  createdAt    DateTime @default(now())
  accounts     Account[]
}

model Account {
  id             String   @id @default(uuid())
  userId         String
  provider       String
  providerUserId String
  email          String?
  createdAt      DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerUserId], name: "provider_providerUserId_unique")
  @@index([userId])
}
